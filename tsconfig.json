{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist/api",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": false
  },
  "include": ["server.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "dist", "public", "*.log", "/tmp/**", "**/*.tmp", "**/*.temp"]
}